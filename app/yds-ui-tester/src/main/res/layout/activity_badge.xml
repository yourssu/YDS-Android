<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".BadgeActivity">

    <data>

        <import type="com.yourssu.design.system.foundation.Icon" />
        <import type="com.yourssu.design_model.ItemColor" />
        <variable
            name="activity"
            type="com.yourssu.yds_ui_tester.BadgeActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.yourssu.design.system.atom.Badge
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:text="@{`모노 뱃지`}"
            app:color="@{ItemColor.Mono}" />

        <com.yourssu.design.system.atom.Badge
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:text="@{`모노 뱃지`}"
            app:color="@{ItemColor.Emerald}" />

        <com.yourssu.design.system.atom.Badge
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:text="@{`모노 뱃지`}"
            app:icon="@{Icon.ic_ground_line}"
            app:color="@{ItemColor.Green}" />

        <com.yourssu.design.system.atom.Badge
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:text="@{`모노 뱃지`}"
            app:icon="@{Icon.ic_board_line}"
            app:color="@{ItemColor.Purple}" />

        <com.yourssu.design.system.atom.Badge
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:text="@{activity.textData}"
            app:icon="@{activity.iconData}"
            app:color="@{activity.colorData}" />

    </LinearLayout>

</layout>