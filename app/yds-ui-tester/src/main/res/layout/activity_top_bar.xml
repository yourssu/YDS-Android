<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.yourssu.design.system.foundation.Icon" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.yourssu.design.system.component.SingleTitleTopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:firstIcon="@{Icon.ic_bell_filled}"
            app:secondIcon="@{Icon.ic_arrow_left_line}"
            app:thirdIcon="@{Icon.ic_arrow_down_line}"
            app:title="@{`타이틀`}" />

        <com.yourssu.design.system.component.SingleTitleTopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:secondIcon="@{Icon.ic_bell_filled}"
            app:thirdIcon="@{Icon.ic_arrow_left_line}"
            app:title="@{`타이틀`}" />

        <com.yourssu.design.system.component.SingleTitleTopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:firstText="@{`버튼`}"
            app:secondIcon="@{Icon.ic_arrow_left_line}"
            app:thirdIcon="@{Icon.ic_arrow_down_line}"
            app:title="@{`타이틀`}" />

        <com.yourssu.design.system.component.SingleTitleTopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:firstText="@{`버튼`}"
            app:secondText="@{`버튼`}"
            app:thirdIcon="@{Icon.ic_arrow_down_line}"
            app:title="@{`타이틀`}" />

        <com.yourssu.design.system.component.SingleTitleTopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:firstText="@{`버튼`}"
            app:secondText="@{`버튼`}"
            app:thirdText="@{`버튼`}"
            app:title="@{`타이틀`}" />

        <com.yourssu.design.system.component.SingleTitleTopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:secondText="@{`버튼`}"
            app:thirdText="@{`버튼`}"
            app:title="@{`타이틀`}" />

        <com.yourssu.design.system.component.SingleTitleTopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:thirdText="@{`버튼`}"
            app:title="@{`타이틀`}" />

        <com.yourssu.design.system.component.SingleTitleTopBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@{`타이틀`}" />


    </LinearLayout>
</layout>
