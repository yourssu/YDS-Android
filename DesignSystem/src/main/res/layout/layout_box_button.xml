<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.yourssu.design.system.atom.IconView" />
    </data>

    <LinearLayout
        android:id="@+id/boxButtonFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_button_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <com.yourssu.design.system.atom.IconView
            android:id="@+id/leftIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            app:iconViewSize="@{IconView.Medium}" />

        <com.yourssu.design.system.atom.Text
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/buttonReversed"
            app:typo="button2"
            tools:text="재생하기" />

        <com.yourssu.design.system.atom.IconView
            android:id="@+id/rightIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:iconViewSize="@{IconView.Medium}" />

    </LinearLayout>

</layout>