<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.yourssu.design.system.atom.IconView" />
    </data>

    <LinearLayout
        android:id="@+id/badgeFrame"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:background="@drawable/badge_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp">

        <com.yourssu.design.system.atom.IconView
            android:id="@+id/badgeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            app:size="@{IconView.ExtraSmall}" />

        <com.yourssu.design.system.atom.Text
            android:id="@+id/badgeContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/monoItemText"
            app:typo="caption1"
            tools:text="모노 뱃지" />

    </LinearLayout>

</layout>
