<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.yourssu.design.system.foundation.Icon" />
        <import type="com.yourssu.design.system.atom.PlainButton" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <com.yourssu.design.system.atom.Text
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/textPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/first_button"
            app:layout_constraintStart_toStartOf="parent"
            app:typo="title2"
            tools:text="타이틀" />

        <com.yourssu.design.system.atom.PlainButton
            android:id="@+id/first_button"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintRight_toLeftOf="@id/second_button"
            app:leftIcon="@{Icon.ic_ground_line}"
            app:size="@{PlainButton.LARGE}"/>

        <com.yourssu.design.system.atom.PlainButton
            android:id="@+id/second_button"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            app:layout_constraintRight_toLeftOf="@id/third_button"
            app:leftIcon="@{Icon.ic_ground_line}"
            app:size="@{PlainButton.LARGE}" />

        <com.yourssu.design.system.atom.PlainButton
            android:id="@+id/third_button"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            app:layout_constraintRight_toRightOf="parent"
            app:leftIcon="@{Icon.ic_ground_line}"
            app:size="@{PlainButton.LARGE}" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>